{
  "testRunner": "jest",
  "jest": { "configFile": "config/jest.config.js" },
  "reporters": ["clear-text", "json", "progress", "html"],
  "mutate": ["src/**/*.js", "!src/**/*.test.js"],
  "coverageAnalysis": "perTest",
  "thresholds": { "high": 90, "low": 80, "break": 80 },
  "jsonReporter": { "fileName": "mutation-testing/reports/mutation-report.json" },
  "htmlReporter": { "fileName": "mutation-testing/reports/html/index.html" }
}
